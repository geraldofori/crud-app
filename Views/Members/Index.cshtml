@model List<CRUD_App.Models.Domain.Member>
@{

}
<h3>Members</h3>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<a class="btn btn-secondary" asp-area="" asp-controller="Members" asp-action="Add">Add Member</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Surname</th>
            <th>Age</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var member in Model)
        {
            <tr>
                <td>@member.Id</td>
                <td>@member.FirstName</td>
                <td>@member.SurName</td>
                <td>@member.Age</td>
                <td><a href="Members/View/@member.Id">View</a></td>
            </tr>
        }
    </tbody>

</table>